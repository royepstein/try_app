<div class="page header">
<h1>All of the Statuses</h1>
</div>
<table>
  
  <tbody>
    <% @statuses.each do |status| %>
    <div class="status">
      <strong><%=status.name%></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class=admin">
          <% link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this stauts"} %>
          </span>
        </div>
    </div>
    
      <tr>
        <td><%= status.name %></td>
        <td><%= status.content %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= button_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
